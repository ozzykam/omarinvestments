rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // =========================================================================
    // Default: Deny all direct access
    // All file access should go through signed URLs generated by Cloud Functions
    // =========================================================================

    match /llcs/{llcId}/{allPaths=**} {
      // No direct read/write access
      // Use Cloud Functions to generate signed URLs after permission checks
      allow read, write: if false;
    }

    // =========================================================================
    // Catch-all: Deny everything else
    // =========================================================================

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
